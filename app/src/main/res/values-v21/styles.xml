<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/principalDark</item>
        <item name="colorPrimaryDark">@color/principal</item>
        <item name="colorAccent">@color/principalAccent</item>
        <item name="android:navigationBarColor">@color/principal</item>
        <item name="android:textColorPrimary">@color/abc_secondary_text_material_dark</item>
        <item name="android:colorPrimary">@color/principal</item>
        <item name="android:colorPrimaryDark">@color/principalDark</item>
        <item name="android:windowBackground">@color/blanco</item>
        <item name="android:colorBackground">@color/blanco</item>
    </style>

    <style name="AppThemeHome" parent="android:Theme.Material.Light">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorAccent">#FFFFFFFF</item>
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryDark">@color/principalDark</item>
        <item name="android:colorPrimary">@color/principal</item>
        <item name="android:colorPrimaryDark">@color/principalDark</item>
        <item name="android:colorAccent">@color/principalAccent</item>
        <item name="android:textColorPrimary">@color/blanco</item>
    </style>

    <style name="Principal" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/gris</item>
        <item name="colorPrimaryDark">@color/primary_material_dark</item>
        <item name="colorAccent">@color/principal</item>
        <item name="android:navigationBarColor">@color/principal</item>
        <item name="android:textColorPrimary">@color/background_material_light</item>
        <item name="android:statusBarColor">@color/principalDark</item>
    </style>
</resources>